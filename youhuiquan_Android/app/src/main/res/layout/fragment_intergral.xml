<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f2f2f2"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/rl_top_content"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/iv_bar_start"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/dp_4"
            android:visibility="gone"
            android:src="@drawable/integral_ic_back_white"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="36dp"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/integral_rect_8_30ffffff"
            android:text="提现"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/dp_16"
            android:id="@+id/tv_withdrawal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_withdrawal"
            android:layout_marginEnd="@dimen/dp_8"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:text="0.00"
            android:visibility="gone"
            android:id="@+id/tv_amt"
            android:drawableLeft="@drawable/integral_icon_integral_red_envelopes"
            android:drawablePadding="@dimen/dp_5"/>

        <View
            android:id="@+id/guide_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/tv_star_coin"
            app:layout_constraintRight_toRightOf="@id/tv_exchange"
            app:layout_constraintTop_toTopOf="@id/tv_star_coin"
            app:layout_constraintBottom_toBottomOf="@id/tv_star_coin"/>

        <TextView
            android:layout_width="36dp"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/integral_rect_8_30ffffff"
            android:text="兑换"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_amt"
            android:layout_marginEnd="@dimen/dp_20"
            android:id="@+id/tv_exchange"/>

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:text="0"
            android:id="@+id/tv_star_coin"
            android:drawableLeft="@drawable/integral_icon_integral_star_coin_small"
            android:drawablePadding="@dimen/dp_5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/dp_20"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</RelativeLayout>