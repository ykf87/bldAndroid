<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:LineEditView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.jiankang.gouqi.widget.AppBackBar
        android:id="@+id/app_back_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:bar_end_text="联系客服"
        app:bar_title="钱袋子" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:text="设置钱袋子密码"
                android:textColor="@color/color_black_333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="12dp"
                android:text="为保证资金安全，重要操作需要输验证密码"
                android:textColor="@color/black_60"
                android:textSize="14sp" />

            <com.jiankang.gouqi.widget.LineEditView
                android:id="@+id/edt_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                LineEditView:EditMaxL="6"
                LineEditView:Edithint="请输入6位数字的密码"
                LineEditView:inputType="numberPassword" />


            <com.jiankang.gouqi.widget.LineEditView
                android:id="@+id/edt_again_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                LineEditView:EditMaxL="6"
                LineEditView:Edithint="再次输入密码"
                LineEditView:inputType="numberPassword" />

            <TextView
                android:id="@+id/tv_reset_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/sel_rect_22_primary_primaryp"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="9dp"
                android:enabled="false"
                android:text="设置密码"
                android:textColor="@drawable/set_white_e5"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>