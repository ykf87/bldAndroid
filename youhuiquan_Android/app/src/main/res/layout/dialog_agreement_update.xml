<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_24_white"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rect_8_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:textColor="@color/text_title_info"
            android:textSize="@dimen/sp_18"
            android:textAlignment="center"
            android:text="@string/dialog_agreement_update" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="14dp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/text_title_info"
            android:textSize="@dimen/sp_14"
            tools:text="@string/dialog_agreement_desc_2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_15"
                android:background="@drawable/sel_rect_22_primary_primaryp"
                android:text="@string/dialog_agreement_agree"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/tv_start"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/dialog_agreement_noupdate"
                android:textColor="@color/text_title_info"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>