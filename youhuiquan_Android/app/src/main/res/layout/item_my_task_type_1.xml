<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/rect_4_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@drawable/rect_4_tl_tr_grey"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_task_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待提交"
                    android:textColor="@color/color_text_green_41D78C"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_refuse_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:textColor="@color/color_text_666666_tab"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"
                    tools:text="审核中" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_time_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_4"
                    android:text="提交时限："
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_12" />

                <com.blandal.app.widget.TimeTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:editable="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    tools:text="08:08:08" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#fffafafa" />

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            tools:text="新号码注册银行卡领话费" />

        <TextView
            android:id="@+id/tv_task_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_18"
            tools:text="￥10.00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_give_up"
                android:layout_width="84dp"
                android:layout_height="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/rect_18_white_grey"
                android:gravity="center"
                android:text="放弃"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="84dp"
                android:layout_height="28dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_18_red"
                android:gravity="center"
                android:text="立即提交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>