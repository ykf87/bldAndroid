<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:LineEditView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.jiankang.gouqi.widget.LineTop
        android:id="@+id/lib_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_32"
                android:text="重置密码"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_tail_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                android:text="为保障您的账号安全，请先验证手机号"
                android:textColor="@color/black_60"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="32dp"
                android:text="用户名"
                android:textColor="@color/text_title_info"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="+86"
                    android:visibility="gone"
                    android:textColor="@color/text_title_info"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:id="@+id/v_line"
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/dp_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:background="@color/gray_line_divider_e5" />

                <com.jiankang.gouqi.widget.LineEditView
                    android:id="@+id/edt_phone_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_11"
                    android:layout_marginEnd="@dimen/dp_16"
                    LineEditView:Edithint="请输入用户名"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="16dp"
                android:text="验证码"
                android:visibility="gone"
                android:textColor="@color/text_title_info"
                android:textSize="@dimen/sp_12" />

            <com.jiankang.gouqi.widget.LineEditView
                android:id="@+id/edt_vercode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                LineEditView:EditMaxL="6"
                android:visibility="gone"
                LineEditView:Edithint="请输入验证码"
                LineEditView:Righttext="获取验证码"
                LineEditView:inputType="number"
                LineEditView:isShowRight="true"
                app:RighttextColor="@color/color_primary_p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="16dp"
                android:text="原始密码"
                android:textColor="@color/text_title_info"
                android:textSize="@dimen/sp_12" />

            <com.jiankang.gouqi.widget.LineEditView
                android:id="@+id/edt_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                LineEditView:Edithint="请输入原始密码"
                LineEditView:inputType="textPassword" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="16dp"
                android:text="新密码"
                android:textColor="@color/text_title_info"
                android:textSize="@dimen/sp_12" />

            <com.jiankang.gouqi.widget.LineEditView
                android:id="@+id/edt_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                LineEditView:Edithint="请输入新密码"
                LineEditView:inputType="textPassword" />

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="@dimen/dp_16"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:text="确认密码"-->
<!--                android:textColor="@color/text_title_info"-->
<!--                android:textSize="@dimen/sp_12" />-->

<!--            <cc.jianke.zhaiwanzhuan.widget.LineEditView-->
<!--                android:id="@+id/edt_again_password"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="@dimen/dp_16"-->
<!--                android:layout_marginEnd="@dimen/dp_16"-->
<!--                LineEditView:EditMaxL="11"-->
<!--                LineEditView:Edithint="再次输入密码"-->
<!--                LineEditView:inputType="textPassword" />-->

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/sel_rect_22_primary_primaryp"
                android:textColor="@drawable/set_white_e5"
                android:enabled="false"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="9dp"
                android:text="重置密码"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>