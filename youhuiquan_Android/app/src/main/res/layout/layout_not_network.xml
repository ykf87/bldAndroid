<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:layout_width="@dimen/dp_275"
        android:layout_height="@dimen/dp_188"
        android:src="@drawable/ic_no_network" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网路出错啦,请点击按钮重新加载"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/color_tip_pink_FFAA99"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/rect_14_white_red"
        android:paddingLeft="@dimen/dp_14"
        android:paddingTop="@dimen/dp_4"
        android:paddingRight="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_4"
        android:text="重新加载"
        android:textColor="@color/colorPrimary" />
</LinearLayout>