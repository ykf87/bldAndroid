<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/rect_5_tl_tr_white"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="3dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/rect_2_red" />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_23"
            android:text="我提交的内容"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:drawableRight="@drawable/iv_right"
            android:text="修改"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_look_detail"
        android:layout_width="match_parent"
        android:background="@drawable/rect_5_bl_br_white"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_18"
            android:drawableRight="@drawable/ic_detail_arrow_down"
            android:drawablePadding="@dimen/dp_4"
            android:text="查看任务详情"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <View
        android:id="@+id/v_task_detail_line"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="@color/color_bg_grey_F7F7F7"
        android:layout_height="@dimen/dp_10"/>

    <LinearLayout
        android:id="@+id/ll_task_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_5_white"
        android:visibility="gone"
        android:orientation="vertical" />


</LinearLayout>