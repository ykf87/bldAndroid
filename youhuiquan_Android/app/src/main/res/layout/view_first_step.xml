<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_12">

    <TextView
        android:id="@+id/tv_step"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/rect_12_red"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:text="第1步"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/space"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_step"
        app:layout_constraintLeft_toLeftOf="@id/tv_step"
        app:layout_constraintRight_toRightOf="@id/tv_step" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/line_red_dotted"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="@id/space"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/space">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存下方二维码，打开微信扫一扫识别图中二维码，使用手机号码注册，后跳转浏览器下载网上国网APP。"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/rect_14_white_red"
            android:gravity="center"
            android:text="复制"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_84"
            android:layout_marginTop="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/rect_14_white_red"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>