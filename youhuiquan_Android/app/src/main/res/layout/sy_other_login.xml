<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="80dp"
            android:layout_height="0.5dp"
            android:background="@color/gray_line_divider_e5" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="其他方式登录"
            android:textColor="@color/text_normal"
            android:textSize="12sp" />

        <View
            android:layout_width="80dp"
            android:layout_height="0.5dp"
            android:background="@color/gray_line_divider_e5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_code_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_tip"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_75"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_login_mobile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码登录"
            android:textColor="@color/text_title_info"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_pwd_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ll_code_login"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_75"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_login_mobile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码登录"
            android:textColor="@color/text_title_info"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</RelativeLayout>