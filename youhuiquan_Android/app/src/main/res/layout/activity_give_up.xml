<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.jiankang.gouqi.widget.AppBackBar
        android:id="@+id/app_back_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:bar_title="意见反馈" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_phont"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/rect_4_grey"
                android:gravity="center_vertical"
                android:hint="请输入您的手机号"
                android:paddingLeft="16dp"
                android:maxLines="1"
                android:textSize="@dimen/sp_14"
                android:paddingRight="15dp"/>

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/rect_4_grey"
                android:gravity="center_vertical"
                android:hint="反馈标题"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:ellipsize="end"
                android:textSize="@dimen/sp_14"
                android:paddingRight="15dp"/>

            <EditText
                android:id="@+id/et_reson"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/rect_4_grey"
                android:gravity="top|left"
                android:hint="请输入反馈内容"
                android:lineSpacingExtra="@dimen/dp_10"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:maxLength="200"
                android:scrollbars="vertical"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_16"
                android:enabled="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/rect_22_red"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>