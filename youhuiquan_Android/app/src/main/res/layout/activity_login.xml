<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:LineEditView="http://schemas.android.com/apk/res-auto"
    xmlns:OnlyCheckBox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:windowSoftInputMode="adjustResize">

    <com.jiankang.gouqi.widget.LineTop
        android:id="@+id/lib_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:id="@+id/sv_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lib_top"
        android:layout_marginTop="@dimen/dp_32"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_28" />

<!--                    <TextView-->
<!--                        android:id="@+id/tv_new_account"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_alignParentRight="true"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:text="创建新账号"-->
<!--                        android:textColor="@color/colorPrimary"-->
<!--                        android:textSize="@dimen/sp_16"-->
<!--                        android:visibility="gone"/>-->
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="50dp"
                    android:text="手机号码"
                    android:textColor="@color/text_title_info"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="68dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="账号"
                        android:textColor="@color/text_title_info"
                        android:textSize="@dimen/sp_12" />
                    <com.jiankang.gouqi.widget.LineEditView
                        android:id="@+id/edt_phone_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_16"
                        LineEditView:showBottomLine="false"
                        LineEditView:EditMaxL="11"
                        LineEditView:Edithint="请输入账号"
                        LineEditView:inputType="number" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/gray_line_divider_e5"
                    />

                <LinearLayout
                    android:id="@+id/ll_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="密码"
                        android:textColor="@color/text_title_info"
                        android:textSize="@dimen/sp_12" />

                    <com.jiankang.gouqi.widget.LineEditView
                        android:id="@+id/edt_vercode_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_16"
                        LineEditView:EditMaxL="32"
                        LineEditView:Edithint="请输入密码"
                        LineEditView:Righttext=""
                        LineEditView:RighttextColor="#19C7EA"
                        LineEditView:inputType="textPassword"
                        LineEditView:isShowRight="true" />

                </LinearLayout>

                <com.jiankang.gouqi.widget.LineEditView
                    android:id="@+id/edt_verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:visibility="gone"
                    LineEditView:EditMaxL="6"
                    LineEditView:Edithint="请输入验证码"
                    LineEditView:Righttext="获取验证码"
                    LineEditView:RighttextColor="#19C7EA"
                    LineEditView:inputType="number"
                    LineEditView:isShowRight="true" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tv_title"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_reg_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_12"
                        android:text="@string/login_auto_hint"
                        android:textColor="@color/text_hint"
                        android:visibility="gone"
                        android:textSize="@dimen/sp_12" />
                    <TextView
                        android:id="@+id/tv_lose_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:gravity="right"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_12"
                        android:text="没有账号注册?"
                        android:visibility="gone"
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/sp_12" />
                    <TextView
                        android:id="@+id/tv_new_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:gravity="right"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_12"
                        android:text="没有账号注册?"
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_32"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:background="@drawable/sel_rect_26_primary_primaryp"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="9dp"
                    android:text="登录"
                    android:textColor="@drawable/set_white_e5"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_onekey_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:drawableRight="@drawable/ic_code_login_right"
                    android:text="一键登录"
                    android:textColor="@color/text_title_info"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/fl_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_24"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_12"
                    android:visibility="gone"
                    >
                    <com.jiankang.gouqi.widget.OnlyCheckBox
                        android:id="@+id/cb_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingEnd="8dp"
                        OnlyCheckBox:is_checked="false"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_agreement_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册/登录即同意"
                        android:textColor="@color/text_hint"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《用户协议》"
                        android:textColor="@color/my_resume_percent_tip"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_and"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="#909399"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《隐私政策》"
                        android:textColor="@color/my_resume_percent_tip"
                        android:textSize="14sp" />
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_wechat_login"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                     />

                <ImageView
                    android:id="@+id/img_weibo_login"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/img_wechat_login"
                    android:scaleType="fitXY"
                     />

                <ImageView
                    android:id="@+id/img_qq_login"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_weibo_login"
                    android:scaleType="fitXY"
                     />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/tv_register"
                    android:background="@color/new_line_gray" />

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="创建新账号"
                    android:textColor="#00bcd4"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_60"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/ll_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:layout_marginRight="@dimen/dp_50">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_1"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_toLeftOf="@id/tv_other"
                        android:background="@color/bg_gray_e5" />

                    <TextView
                        android:id="@+id/tv_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="其他方式登录"
                        android:textColor="@color/text_title_info"
                        android:textSize="@dimen/sp_12" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_1"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_toRightOf="@id/tv_other"
                        android:background="@color/bg_gray_e5" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_one_key_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_other"
                    android:layout_marginLeft="@dimen/dp_75"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_login" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一键登录"
                        android:textColor="@color/text_title_info"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_code_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_other"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_75"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_code_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_login_mobile" />

                    <TextView
                        android:id="@+id/tv_code_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="验证码登录"
                        android:textColor="@color/text_title_info"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>